{
  "name": "playwright-lseg-demo",
  "version": "1.0.0",
  "description": "Automation testing project using Playwright and Serenity/JS",
  "main": "index.js",
  "private": true,
  "author": "",
  "license": "ISC",
  "scripts": {
    "test": "npx playwright test",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:ci": "playwright test --reporter=line,allure-playwright",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --no-fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:check:fix": "prettier --check . --write",
    "prettier:check:json": "prettier --check . --parser,json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commit:lint": "commitlint --from=HEAD~1",
    "commit:lint:fix": "commitlint --from=HEAD~1 --fix",
    "precommit": "lint-staged",
    "allure:report": "allure generate reports/allure-results --clean -o reports/allure-report && allure open reports/allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:gen": "allure generate allure-results -o reports/allure --clean",
    "allure:open": "allure open reports/allure"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.54.2",
    "@serenity-js/assertions": "^3.34.0",
    "@serenity-js/core": "^3.34.0",
    "@serenity-js/mocha": "^3.34.0",
    "@serenity-js/playwright": "^3.34.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/lodash": "^4.17.20",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^54.1.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "lodash": "^4.17.21",
    "playwright": "^1.54.2",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.0"
  }
}
